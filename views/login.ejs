    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>My Webcrumbs Plugin</title>
        <style>
            @import url(https://fonts.googleapis.com/css2?family=Lato&display=swap);
            @import url(https://fonts.googleapis.com/css2?family=Open+Sans&display=swap);
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-color: #f3f4f6;
                margin: 0;
            } 
        </style>
    </head>
    <body>
        <form action="/login" method="post">
          <div id="webcrumbs">
            <div class="w-[380px] bg-white rounded-xl shadow-lg p-8 transition-transform duration-300 hover:shadow-xl">
                <h1 class="text-2xl font-semibold text-center mb-6">Login</h1>
                <div class="relative mb-5 group">
                    <input
                        type="text"
                        placeholder="Username"
                        name="username"
                        required=""
                        class="w-full bg-gray-50 rounded-lg py-3 px-10 outline-none border border-transparent focus:border-blue-500 transition-all duration-300"
                    />
                    <i
                        class="bx bxs-user absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-hover:text-blue-500 transition-colors duration-300"
                    ></i>
                </div>
                <div class="relative mb-4 group">
                    <input
                        type="password"
                        placeholder="Password"
                        name="password"
                        required=""
                        class="w-full bg-gray-50 rounded-lg py-3 px-10 outline-none border border-transparent focus:border-blue-500 transition-all duration-300"
                    />
                    <i
                        class="bx bxs-lock-alt absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 group-hover:text-blue-500 transition-colors duration-300"
                    ></i>
                </div>
                <div class="flex justify-end mb-5">
                    <a
                        href="/forgot"
                        class="text-sm text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200"
                        >Forgot password?</a
                    >
                </div>
                <button
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 rounded-lg transition-all duration-300 transform hover:scale-[1.02] active:scale-[0.98] shadow-md hover:shadow-lg"
                >
                    Login
                </button>
                <div class="text-center mt-6">
                    <p class="text-gray-600">
                        Don't have an account?
                        <a
                            href="/signup"
                            class="text-blue-600 font-medium ml-1 hover:text-blue-800 hover:underline transition-colors duration-200"
                            >Register</a
                        >
                    </p>
                </div>
            </div>
        </div>
        </form>

