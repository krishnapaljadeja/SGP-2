<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuiziFY - Manage Questions</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-gradient: linear-gradient(135deg, #6366f1, #8b5cf6);
        --secondary-gradient: linear-gradient(135deg, #3b82f6, #2dd4bf);
        --background-gradient: linear-gradient(135deg, #f8fafc, #e2e8f0);
        --card-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        --hover-transform: translateY(-5px);
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }

      body {
        background: var(--background-gradient);
        min-height: 100vh;
        color: #1e293b;
      }

      .navbar {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        padding: 1rem 0;
      }

      .logo {
        font-size: 2.5rem;
        font-weight: 700;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        letter-spacing: -1px;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      .main-content {
        margin-top: 100px;
        padding: 2rem 0;
      }

      .card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        max-width: 900px;
        margin: 0 auto;
      }

      .form-group {
        margin-bottom: 1.5rem;
      }

      .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #1e293b;
      }

      .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        transition: all 0.3s ease;
        font-size: 1rem;
      }

      .form-input:focus {
        outline: none;
        border-color: #8b5cf6;
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
      }

      .select-quiz {
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
        background: white;
        font-size: 1rem;
        min-width: 200px;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .select-quiz:focus {
        outline: none;
        border-color: #8b5cf6;
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
      }

      .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        border: none;
        font-weight: 500;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
      }

      .btn-primary {
        background: var(--primary-gradient);
        color: white;
      }

      .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      }

      .grid {
        display: grid;
        gap: 1.5rem;
      }

      .grid-cols-2 {
        grid-template-columns: repeat(2, 1fr);
      }

      @media (max-width: 768px) {
        .grid-cols-2 {
          grid-template-columns: 1fr;
        }
      }

      .fade-in {
        animation: fadeIn 0.5s ease-out;
      }

      .logout-btn {
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 12px;
        background: linear-gradient(
          135deg,
          #ef4444,
          #dc2626
        ); /* Red gradient */
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
        box-shadow: 0 4px 10px rgba(239, 68, 68, 0.3);
      }

      .logout-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
        background: linear-gradient(135deg, #dc2626, #b91c1c);
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
      }

      .points-input {
        max-width: 200px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <div
          style="
            display: flex;
            justify-content: space-between;
            align-items: center;
          "
        >
          <h1 class="logo">QUIZIFY</h1>
          <div style="display: flex; gap: 1rem; align-items: center">
            <button class="btn">
              <span class="material-symbols-outlined">person</span>
            </button>
            <form action="/logout" method="post">
              <button class="logout-btn">Logout</button>
            </form>
          </div>
        </div>
      </div>
    </nav>

    <main class="main-content">
      <div class="container">
        <div class="card fade-in">
          <form method="POST" action="/submitque">
            <div class="header-actions">
              <div style="display: flex; align-items: center; gap: 1rem">
                <h2 style="font-size: 1.8rem; font-weight: 600">
                  Add Question
                </h2>
                <select name="quiz_title" class="select-quiz">
                  <option selected disabled>Select Quiz</option>
                  <% users.forEach(function(e) { %>
                  <option><%= e.title %></option>
                  <% }); %>
                </select>
              </div>
              <div style="display: flex; gap: 1rem">
                <a href="/admin-dashboard" class="btn btn-primary">
                  <span class="material-symbols-outlined">home</span>
                  Home
                </a>
                <a href="/manageview" class="btn btn-primary">
                  <span class="material-symbols-outlined">visibility</span>
                  View Questions
                </a>
              </div>
            </div>

            <div class="form-group">
              <label class="form-label">Question</label>
              <input type="text" name="question" class="form-input" required />
            </div>

            <div class="grid grid-cols-2">
              <div class="form-group">
                <label class="form-label">Option 1</label>
                <input type="text" name="option1" class="form-input" required />
              </div>
              <div class="form-group">
                <label class="form-label">Option 2</label>
                <input type="text" name="option2" class="form-input" required />
              </div>
              <div class="form-group">
                <label class="form-label">Option 3</label>
                <input type="text" name="option3" class="form-input" required />
              </div>
              <div class="form-group">
                <label class="form-label">Option 4</label>
                <input type="text" name="option4" class="form-input" required />
              </div>
            </div>

            <div class="form-group">
              <label class="form-label">Correct Answer</label>
              <input
                type="text"
                name="correct_answer"
                class="form-input"
                required
              />
            </div>

            <div class="form-group">
              <label class="form-label">Points</label>
              <input
                type="number"
                name="points"
                class="form-input points-input"
                required
              />
            </div>

            <div
              style="display: flex; justify-content: flex-end; margin-top: 2rem"
            >
              <button type="submit" class="btn btn-primary">
                <span class="material-symbols-outlined">add_circle</span>
                Add Question
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("questionForm");
        const quizSelect = document.getElementById("quizSelect");

        // Store selected quiz in URL when changed
        quizSelect.addEventListener("change", function () {
          const selectedQuiz = this.value;
          if (selectedQuiz) {
            window.history.replaceState(
              {},
              "",
              `?quiz_title=${encodeURIComponent(selectedQuiz)}`
            );
          }
        });

        // Handle form submission
        form.addEventListener("submit", async function (e) {
          e.preventDefault();

          const formData = new FormData(form);
          const quizTitle = formData.get("quiz_title");

          try {
            const response = await fetch("/submitque", {
              method: "POST",
              body: formData,
            });

            const result = await response.text();

            // Show success message
            alert("Question added successfully!");

            // Clear form but keep selected quiz
            form.reset();
            quizSelect.value = quizTitle;

            // Update URL with selected quiz
            window.history.replaceState(
              {},
              "",
              `?quiz_title=${encodeURIComponent(quizTitle)}`
            );
          } catch (error) {
            console.error("Error:", error);
            alert("Error adding question. Please try again.");
          }
        });

        // Get quiz title from URL on page load
        const urlParams = new URLSearchParams(window.location.search);
        const quizTitle = urlParams.get("quiz_title");
        if (quizTitle) {
          quizSelect.value = quizTitle;
        }
      });
    </script>
  </body>
</html>
