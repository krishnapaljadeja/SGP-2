    <body>
        <div id="webcrumbs">
            <div class="w-full flex justify-center">
                <div class="w-[1000px] bg-gray-50 min-h-screen">
                    <header class="bg-white shadow-sm py-3 px-6 flex justify-between items-center">
                        <div class="text-blue-600 font-bold text-2xl">QUIZIFY</div>
                        <div class="flex items-center gap-4">
                            <button class="hover:bg-gray-100 rounded-full p-2 transition-colors duration-200">
                                <span class="material-symbols-outlined">account_circle</span>
                            </button>
                            <button
                                class="bg-red-500 hover:bg-red-600 text-white px-4 py-1.5 rounded-full text-sm transition-all duration-200 hover:shadow-md"
                            >
                                Logout
                            </button>
                        </div>
                    </header>
                    <div class="p-6 max-w-4xl mx-auto">
                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <div class="flex justify-between items-center mb-6">
                                <h1 class="text-2xl font-bold text-gray-800"><%= quiz.title %></h1>
                                <div class="bg-blue-100 text-blue-800 rounded-lg px-4 py-2 flex items-center gap-2">
                                    <span class="material-symbols-outlined">timer</span>
                                    <span class="font-semibold">09:45</span>
                                </div>
                            </div>
                            <form action="/startQuiz" method="post">
                                <input type="hidden" name="quizId" value="<%= quiz._id %>" />
                                
                                <% quiz.questions.forEach(function(q, index) { %>
                                    <div class="bg-blue-50 rounded-lg p-4 mb-8">
                                        <div class="flex justify-between items-center mb-2">
                                            <div class="flex items-center gap-2">
                                                <span class="bg-blue-600 text-white w-7 h-7 rounded-full flex items-center justify-center font-semibold"><%= index + 1 %></span>
                                                <h2 class="font-semibold text-lg"><%= q.question %></h2>
                                            </div>
                                        </div>
                            
                                        <% q.options.forEach(function(option) { %>
                                            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-4">
                                                <label class="bg-white rounded-lg border border-gray-200 p-3 cursor-pointer">
                                                    <input type="radio" name="answers[<%= q._id %>]" value="<%= option %>" required />
                                                    <span><%= option %></span>
                                                </label>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% }); %>
                            
                                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2.5 rounded-lg transition-all duration-200">
                                    Submit Quiz
                                </button>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
